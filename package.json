{
	"name": "smart-media-replacement",
	"version": "1.0.0",
	"description": "This plugin allows you to replace media in the media library.",
	"author": "Troy Chaplin",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"lint-staged": {
		"*.{css,scss}": [
			"stylelint --fix",
			"git add"
		],
		"*.js": [
			"wp-scripts format",
			"wp-scripts lint-js",
			"git add"
		],
		"*.php": [
			"composer run format",
			"git add"
		]
	},
	"scripts": {
		"start": "webpack --config webpack.scripts.js --watch",
		"build": "rm -rf build && npm run build:scripts",
		"build:scripts": "wp-scripts build --webpack-copy-php --config webpack.scripts.js",
		"format": "npm run format:js && npm run format:php",
		"format:js": "wp-scripts lint-js --fix",
		"format:php": "./vendor/bin/phpcbf --standard=phpcs.xml.dist -v",
		"lint": "npm run lint:js && npm run lint:php",
		"lint:js": "wp-scripts lint-js --max-warnings=0",
		"lint:php": "composer run lint",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"prepare": "husky"
	},
	"files": [
		"[^.]*"
	],
	"devDependencies": {
		"@wordpress/env": "^10.34.0",
		"@wordpress/eslint-plugin": "^22.19.0",
		"@wordpress/i18n": "^6.7.0",
		"@wordpress/prettier-config": "^4.34.0",
		"@wordpress/scripts": "^30.27.0",
		"@wordpress/stylelint-config": "^23.26.0",
		"eslint-config-prettier": "10.1.8",
		"husky": "^9.1.7",
		"stylelint": "^16.25.0",
		"stylelint-scss": "^6.12.1",
		"webpack": "^5.102.1",
		"webpack-cli": "^6.0.1"
	}
}
